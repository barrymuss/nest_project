{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"styles/*": ["src/styles/*"],
			"assets/*": ["src/assets/*"],
			"components/*": ["src/components/*"],
			"modules/*": ["src/modules/*"],
			"pages/*": ["src/pages/*"],
			"posts/*": ["src/posts/*"],
			"helpers/*": ["src/helpers/*"]
		}
	},
	"include": ["src", "src/**/*", "script/**/*"],
	"exclude": ["node_modules"]
}
